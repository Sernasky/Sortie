{% extends 'base.html.twig' %}

{% block body %}
    <h1>Afficher une sortie</h1>
    {# TODO remplir les champs avec les infos de la sortie #}
    <section>
        <div>
            <ul>
                <li>Nom de la sortie : {{ sortie.nom }}</li>
                <li>Organisateur de la sortie: {{ sortie.user.pseudo }}</li>
                <li>Date et heure de la sortie : {{ sortie.dateheuredebut|date('d-m-Y H:i:s') }} </li>
                <li>Date limite d'inscription : {{ sortie.datelimiteinscription|date('d-m-Y') }} </li>
                <li>Nombre de places : {{ sortie.nombreInscriptionMax }} </li>
                <li>Dur√©e : {{ sortie.duree|date('H:i') }} </li>
                <li>Description et infos : {{ sortie.infosSortie }}</li>
            </ul>
        </div>
        <div>
            <ul>
                <li>Campus : {{ sortie.campus.nom }} </li>
                <li>Ville: {{ sortie.lieu.ville.nom }} </li>
                <li>Lieu : {{ sortie.lieu.nom }}</li>
                <li>Rue :{{ sortie.lieu.rue }} </li>
                <li>Code postal : {{ sortie.lieu.ville.codePostal }}</li>
                <li>Latitude : {{ sortie.lieu.latitude }}</li>
                <li>Longitude :{{ sortie.lieu.longitude }} </li>

            </ul>
            {% if sortie.etat.id == 21 %}
            <h2>Motif de l'annulation de la sortie :{{ sortie.fieldName }}</h2>
            {% endif %}
        </div>
        {#todo si le temps faire modifier#}
        {#        <div> #}
        {#            <button type="submit"><a href="modifier.html.twig">Modifier la sortie</a></button> #}
        {#        </div> #}
    </section>
    {% if sortie.etat.id == 17 %}
    {% include 'inc/inscrire.html.twig' %}
    {% include 'inc/desinscrire.html.twig' %}
    {% endif %}

    <section>
        <h3>Liste des participants inscrits :</h3>
        <table>
            <tr class="tableHeader">
                <td>pseudo</td>
                <td> nom</td>
            </tr>
            {% for participant in participants %}
                <tr class="tableBody">
                    <td>{{ participant.pseudo }}</td>
                    <td>{{ participant.lastname }} {{ participant.firstname }}</td>
                </tr>
            {% endfor %}
        </table>
        {% if app.user.id == sortie.user.id %}
        <a href="{{ path('annulation_sortie', {'id': sortie.id}) }}"><button class="btn btn-dark btn-block w-100">Annuler la sortie</button></a>
        {% endif %}
    </section>
{% endblock %}

